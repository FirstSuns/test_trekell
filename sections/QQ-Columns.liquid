<div class="{{sectionClass}} qq-section-wrap-{{sectionWidth}}" style="text-align:{{sectionTextAlign}};">
    {% if sectionTitle or sectionTextblock %}
      <div class="qq-columns-header">
          {% if sectionTitle %}
            <{{sectionTitleType}} class="section-title">{{sectionTitle}}</{{sectionTitleType}}>
          {% endif %}
          {% if sectionTextblock %}
            <div class="qq-section-textblock">{{sectionTextblock}}</div>
          {% endif %}
      </div>
    {% endif %}
    <div class="qq-columns">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'column' -%}

          {% liquid
            assign columnImage = block.settings.image
            if columnImage != blank 

              if columnImageSize == 'original' 
                assign imageUrl = columnImage | img_url: '900x' 
              elsif columnImageSize == 'portrait' 
                assign imageUrl = columnImage | img_url: '400x600', crop: 'center' 
              elsif columnImageSize == 'square' 
                assign imageUrl = columnImage | img_url: '600x600', crop: 'center' 
              elsif columnImageSize == 'landscape' 
                assign imageUrl = columnImage | img_url: '600x400', crop: 'center' 
              endif 
            endif 

            assign columnTitle = block.settings.column_title 
            assign columnTitleType = block.settings.column_title_type
            assign columnTextblock = block.settings.column_textblock 
            assign columnButtonUrl = block.settings.column_button_url 
            assign columnButtonLabel = block.settings.column_button_label 

          %}

          <div class="qq-single-column">
            {% if columnNumbers %}
              <div class="qq-column-number"><span class="{{columnNumbersSize}}-number">{{forloop.index}}</span></div>
            {% else %}
              {% if columnImage %}
                {% if columnButtonUrl %}
                  <a href="{{columnButtonUrl}}" style="margin-bottom:-10px;">
                {% endif %}
                  <img src="{{imageUrl}}" class="qq-column-thumb">
                {% if columnButtonUrl %}
                  </a>
                {% endif %}
              {% endif %}
            {% endif %}

            {% if columnTitle or columnTextblock or columnButtonUrl %}
              <div class="qq-column-content">
                {% if columnTitle %}
                  <{{columnTitleType}} class="column-title">
                    {% if columnButtonUrl %}
                      <a href="{{columnButtonUrl}}">
                    {% endif %}
                      {{columnTitle}}
                    {% if columnButtonUrl %}
                      </a>
                    {% endif %}
                  </{{columnTitleType}}>
                {% endif %}
                {% if columnTextblock %}
                  <div class="qq-column-textblock">
                    {{columnTextblock}}
                  </div>
                {% endif %}

                {% if columnButtonLabel != blank %}
                  {% if columnButtonUrl == blank %}
                     {% assign columnButtonUrl = '/#' %}
                  {% endif %}
                  <a class="{%if block.settings.button_style == 'button'%}qq-button{%else%}qq-text-link{%endif%}" href="{{columnButtonUrl}}">{{columnButtonLabel}}</a>
                {% endif%}
              </div>
            {% endif %}
          </div>
        {% endcase %}
      {% endfor %}
    </div>
</div>

