{
  "name": "QQ - Multi Columns",
  "tag": "section",
  "class": "qq-columns-section",
  "settings": [
    {
			"type": "text",
			"id": "section_class",
			"label": "Section Class",
			"info": "Add section class (without .). Use spaces to add multiple classes"
		},
    {
      "type": "text",
      "id": "section_title",
      "default": "QQ Columns Section Title",
      "label": "Section Title"
    },
    {
      "type": "select",
      "id": "section_title_type",
      "options": [
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
      "default": "h2",
      "label": "HTML Element",
      "info": "For better SEO"
    },
    {
      "type": "richtext",
      "id": "section_textblock",
      "label": "Section Text Block"
    },
    {
      "type": "header",
      "content": "Section Styling"
    },
    {
			"type": "select",
			"id": "section_width",
			"options": [
				{
					"value": "regular",
					"label": "Regular"
				},
				{
					"value": "fullwidth",
					"label": "Fullwidth"
				}
			],
			"default": "regular",
			"label": "Section Width"
		},
		{
			"type": "range",
			"id": "content_max_width",
			"min": 500,
			"max": 1500,
			"step": 20,
			"unit": "px",
			"label": "Content Max Width",
			"default": 1280
		},
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Section Background Color"
    },
    {
			"type": "range",
			"id": "section_margin_top",
			"min": 0,
			"max": 200,
			"step": 5,
			"unit": "px",
			"label": "Section Top Margin",
			"default": 20
		},
    {
			"type": "range",
			"id": "section_margin_bottom",
			"min": 0,
			"max": 200,
			"step": 5,
			"unit": "px",
			"label": "Section Bottom Margin",
			"default": 20
		},
    {
			"type": "range",
			"id": "section_padding_horizontal",
			"min": 0,
			"max": 100,
			"step": 5,
			"unit": "px",
			"label": "Section Horizontal Padding",
			"default": 20
		},
		{
			"type": "range",
			"id": "section_padding_top",
			"min": 0,
			"max": 100,
			"step": 5,
			"unit": "px",
			"label": "Section Top Padding",
			"default": 20
		},
